<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.craily.cust_dao.CustAuthorityMapper">

	<select id="queryMenu" parameterType="java.lang.String" resultType="java.util.Map">
		SELECT
			m.menu_no,
			m.`name`,
			m.parent_menu_no
		FROM
			menu m
		LEFT JOIN
			job_menu jm
		ON 
			m.menu_no = jm.menu_no
		WHERE
		<choose>
			<when test="parentMenuNo == null">
			m.parent_menu_no is null
			</when>
			<otherwise>
			m.parent_menu_no = #{parentMenuNo}
            </otherwise>
		</choose>
		<if test='jobNo != "1"'>
		AND jm.job_no = #{jobNo}
		</if>
	</select>
	
</mapper>